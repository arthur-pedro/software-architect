{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "alwaysStrict": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,

    "paths": {
      "@src/*": ["src/*"],
      "@infra/*": ["src/infra/*"],
      "@prisma-repositories/*": ["src/infra/database/prisma/repositories/*"],
      "@test/*": ["test/*"]
    }
  }
}
